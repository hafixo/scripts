<% jenkins_servers.each do |s|%>

<h3>
<a href="<%= h(s.base_url) %>"><%= s.label %></a>
<%= status_symbol(s) %>
</h3>

<table>
  <tbody>
    <% s.jobs.each do |j| %>
      <tr class="<%= j.status_type != :error ? "success_row" : "" %>">
        <td><%= h(j.name) %></td>
        <td class="center">
          <span class="badge badge_<%= h(j.status_type) %>">
            <a href="<%= h(s.console_url(j.name)) %>">
              <%= h(j.status_label) %></td>
            </a>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>